<body style="background-color: #F7FBE1;">
    <!-- Carousel for showing EV battery images -->
    <div id="myCarousel" class="carousel slide mb-6 bg gradient-background"
        data-bs-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item">
                <svg class="bd-placeholder-img" width="100%" height="100%"
